{
  "family": "app-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::699475951464:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "laravel-app",
      "image": "699475951464.dkr.ecr.ap-northeast-1.amazonaws.com/laravel-app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 9000,
          "hostPort": 9000
        }
      ],
      "environment": [
        {
          "name": "APP_ENV",
          "value": "production"
        },
        {
          "name": "DB_HOST",
          "value": "main-rds.c92uqwag6qc9.ap-northeast-1.rds.amazonaws.com"
        }
      ],
      "secrets": [
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:699475951464:secret:db-password"
        }
      ]
    },
    {
      "name": "nextjs-app",
      "image": "699475951464.dkr.ecr.ap-northeast-1.amazonaws.com/nextjs-app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000
        }
      ]
    },
    {
      "name": "nginx",
      "image": "699475951464.dkr.ecr.ap-northeast-1.amazonaws.com/nginx-app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ]
    }
  ]
}
